{
  "name": "pressure-pulse-host-controller-electron",
  "version": "0.1.0",
  "private": true,
  "description": "Electron port of Pressure Pulse Host Controller (protocol unchanged)",
  "main": "electron/main.js",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "postinstall": "node tools/rebuild-electron-deps.js || true",
    "rebuild:electron": "node tools/rebuild-electron-deps.js",
    "pack:win": "electron-builder --win --x64",
    "pack:linux-arm64": "electron-builder --linux=AppImage --arm64"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@pinyin-pro/data": "^1.2.0",
    "@serialport/list": "^12.0.0",
    "pinyin-pro": "^3.27.0",
    "serialport": "^12.0.0"
  },
  "optionalDependencies": {
    "spi-device": "^3.1.2"
  },
  "build": {
    "appId": "com.9c-uits.pressure-pulse",
    "productName": "Pressure Pulse Controller",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "renderer/**/*",
      "resoure/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "resoure/**/*.wav"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "arm64"
          ]
        }
      ],
      "category": "Utility",
      "artifactName": "pressure-pulse-controller-${version}-${arch}.${ext}"
    }
  }
}
